<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header row with date/time and confidence -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: "
                    android:textStyle="bold"
                    android:textColor="#060644"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/alert_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#060644"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" at "
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginHorizontal="4dp" />

                <TextView
                    android:id="@+id/alert_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#060644"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Confidence badge -->
            <TextView
                android:id="@+id/alert_confidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="85%"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Alert type row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: "
                android:textStyle="bold"
                android:textColor="#060644"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/alert_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF4444"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Reason row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details:"
                android:textStyle="bold"
                android:textColor="#060644"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/alert_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:lineSpacingMultiplier="1.2" />
        </LinearLayout>

        <!-- Behavior output -->
        <TextView
            android:id="@+id/alert_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="RISKY BEHAVIOR DETECTED"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="#FFEEEE"
            android:padding="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView> 