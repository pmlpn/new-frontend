<!-- Root layout with white background using ConstraintLayout -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- ScrollView to enable vertical scrolling of the content above the bottom navigation -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#F2F2F2"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_bar">

        <!-- Main vertical container for screen sections -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header section with app logo, title, and description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#060644"
                android:orientation="horizontal"
                android:padding="10dp">

                <!-- Application logo image -->
                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="98dp"
                    android:src="@drawable/application_logo"
                    android:layout_gravity="center_vertical"
                    tools:ignore="ContentDescription" />

                <!-- Container for logo title and description -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:orientation="vertical">

                    <!-- Logo title text -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:text="@string/logo_title"
                        android:textColor="@android:color/white"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        tools:ignore="TextSizeCheck" />

                    <!-- Logo description text -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/logo_description"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Live Feed preview section with background image and button -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_margin="20dp">

                <!-- Background image for live feed -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/live_feed_image"
                    tools:ignore="ContentDescription" />

                <!-- Transparent clickable button for live feed access -->
                <Button
                    android:id="@+id/live_feed_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="@string/live_feed"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:backgroundTint="#00000000"
                    android:background="@android:color/transparent"/>
            </FrameLayout>

            <!-- Alert History preview section with background image and button -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_margin="20dp">

                <!-- Background image for alert history -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/alert_history_image"
                    tools:ignore="ContentDescription" />

                <!-- Transparent clickable button for alert history access -->
                <Button
                    android:id="@+id/alert_history_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="@string/alert_history"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"/>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed bottom navigation bar using ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home icon and label in navigation bar -->
        <LinearLayout
            android:id="@+id/homeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ExtraText">

            <!-- Home icon button -->
            <ImageButton
                android:id="@+id/home_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="@string/home"
                android:src="@drawable/home"
                android:background="@android:color/transparent"
                android:text="@string/home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <!-- Profile icon and label centered in navigation bar -->
        <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/settingsLayout"
            app:layout_constraintStart_toEndOf="@id/homeLayout"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Profile icon button -->
            <ImageButton
                android:id="@+id/profile_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/profile"
                android:src="@drawable/profile"
                android:text="@string/profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <!-- Settings icon and label in navigation bar -->
        <LinearLayout
            android:id="@+id/settingsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Settings icon button -->
            <ImageButton
                android:id="@+id/settings_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/settings"
                android:src="@drawable/settings"
                android:text="@string/settings"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>